<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unpressed -->
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Shadow -->
            <item android:drawable="@drawable/game_shadow" />

            <!-- Normal Background -->
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#000000" />
                    <corners android:radius="@dimen/game_card_corner" />
                    <gradient android:endColor="@android:color/white" android:startColor="#E0E0E0" android:angle="90" />
                </shape>
            </item>

        </layer-list>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Shadow -->
            <item android:drawable="@drawable/game_shadow" />

            <!-- Normal Background -->
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#FF404040" />
                    <corners android:radius="@dimen/game_card_corner" />
                    <gradient  android:startColor="#FF9700" android:centerColor="#FFAE00" android:endColor="#FFC500" android:angle="90" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!--<item android:state_pressed="true" android:drawable="@drawable/game_wcard_pressed" />-->
</selector>