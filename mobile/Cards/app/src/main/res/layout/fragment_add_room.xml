<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cards.seniordesign.com.cards.lobby.AddRoomFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/add_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="@string/add_room_title"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Room"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Size"
                android:layout_weight="0.2"
                android:textSize="20sp" />
            <Button
                android:id="@+id/add_room_size"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="5"
                android:onClick="showSizePicker"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
